{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "0.1",
  "background": {
    "scripts": ["main.js"]
  },
  "content_scripts": [
    {
      "matches": [
         "https://github.com/*/*/issues"
      ],
      "js": ["main.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.jpg"
  },
  "permissions": [
    "http://www.api.github.com/*"
  ]
}